@model IEnumerable<CinemaWatch.Models.Movie>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron"> 
    <h2 >Welcome to CinemaWatch!</h2>
</div>

        <div class="row">
            <figure class="highcharts-figure">
                <div id="container"></div>

            </figure>
        </div>
        <div class="row">
            <figure class="highcharts-figure">
                <div id="line-container"></div>
            </figure>
        </div>
    @section scripts
{
        <script src="https://code.highcharts.com/highcharts.js"></script>
        <script src="https://code.highcharts.com/modules/series-label.js"></script>
        <script src="https://code.highcharts.com/modules/exporting.js"></script>
        <script src="https://code.highcharts.com/modules/export-data.js"></script>
        <script src="https://code.highcharts.com/modules/accessibility.js"></script>
        @*Where to put CSS files?*@
        <style>
            .jumbotron {
                background-image: url('/img/film_banner.jpg');
                background-size: cover;
                background-repeat: no-repeat;
            } 

            .jumbotron h2{
                color: firebrick; 
                text-align: end; 
                margin-right: 45px; 
                margin-bottom: 10px;
            }

            .highcharts-figure, .highcharts-data-table table {
                min-width: 310px;
                max-width: 800px;
                margin: 1em auto;
            }

            #container {
                height: 400px;
            }

            #line-container {
                height: 400px;
            }

            .highcharts-data-table table {
                font-family: Verdana, sans-serif;
                border-collapse: collapse;
                border: 1px solid #EBEBEB;
                margin: 10px auto;
                text-align: center;
                width: 100%;
                max-width: 500px;
            }

            .highcharts-data-table caption {
                padding: 1em 0;
                font-size: 1.2em;
                color: #555;
            }

            .highcharts-data-table th {
                font-weight: 600;
                padding: 0.5em;
            }

            .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
                padding: 0.5em;
            }

            .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
                background: #f8f8f8;
            }

            .highcharts-data-table tr:hover {
                background: #f1f7ff;
            }
        </style>
        <script type="text/javascript" src="@Url.Content("~/Scripts/Home/Index.js")"></script>
    }
